@model List<eShopQuery.Contracts.Category.Category>

<div class="category-area section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  category wrapper  =======-->
                <div class="category-wrapper">
                    <div class="row row-10 masonry-category-layout">

                        @foreach (var category in Model)
                        {
                            <div class="col-lg-3 col-sm-6 grid-item">
                                <!--=======  single category item  =======-->
                                <div class="single-category-item">
                                    <div class="single-category-item__image">
                                        <a asp-page="/ProductCategory">
                                            <img src="@category.Picture" class="img-fluid" alt="@category.PictureAlt">
                                        </a>
                                    </div>
                                    <div class="single-category-item__content">
                                        <h3 class="title">@category.Title</h3>
                                        <a href="shop-left-sidebar.html">
                                            <i class="ion-android-arrow-dropleft-circle"></i> Shop Now

                                        </a>
                                    </div>
                                </div>
                                <!--=======  End of single category item  =======-->
                            </div>
                        }



                    </div>
                </div>
                <!--=======  End of category wrapper  =======-->
            </div>
        </div>
    </div>
</div>