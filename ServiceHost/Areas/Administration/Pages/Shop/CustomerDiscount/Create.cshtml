
@model DM.ApplicationContract.CustomerContracts.CreateDisocuntCustomerVM
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد تخفیف مشتری جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <input type="text" class="form-control" asp-for="Description">
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div><div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DiscountRate" class="control-label">DiscountRate</label>
                    <input type="text" class="form-control" asp-for="DiscountRate">
                    <span asp-validation-for="DiscountRate" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label">StartDate</label>
                    <input type="text" class="form-control" asp-for="StartDate" accept="image/*">
                    <span asp-validation-for="StartDate" class="error"></span>
                </div>
            </div><div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label">EndDate</label>
                    <input type="text" class="form-control" asp-for="EndDate" accept="image/*">
                    <span asp-validation-for="EndDate" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="IsActive" class="control-label">IsActive</label>
                    <textarea class="form-control autogrow" asp-for="IsActive"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="IsActive" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="Reason" class="control-label">IsActive</label>
                    <textarea class="form-control autogrow" asp-for="Reason" 
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Reason" class="error"></span>
                </div>
            </div>
        </div>



    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>